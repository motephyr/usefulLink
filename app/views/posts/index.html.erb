      <div class="hero-unit">
        <h1>Rails 資源連結</h1>
        <p>台灣學習Rails資源入口</p>
      </div>
      <div>
	      <%= link_to('新增網站',new_post_path, :class => "btn btn-large btn-primary") %>
        <%= link_to('最新',posts_path,:class => "btn btn-small btn-info") %>
        <%= link_to('Gem','/posts/gem',:class => "btn btn-small btn-info") %>
        <%= link_to('新聞','/posts/news',:class => "btn btn-small btn-info" ) %>
        <%= link_to('教學','/posts/teach',:class => "btn btn-small btn-info") %>
        <%= link_to('討論','/posts/discuss',:class => "btn btn-small btn-info") %>
        <%= link_to('ajax page','/posts/discuss',:class => "btn btn-small btn-info", :style => "display:none", :remote => true, "data-type" => "script") %>
        <a id="ajax_data" href="javascript:;" class="btn btn-small btn-info" style="display:none">ajax data</a> 

	      <table id="content" class="table">
	        <tr>
	          <th>標題<th>
	          <th>描述<th>
            <th>類別<th>
	          <th>作者<th>
            <th><th>
	        </tr>
	      <% @posts.each do |post| %>
	      	<tr>
            <th><%= link_to(post.title, post.url) %><th>
	      		<th><%= post.description %><th>
            <th><% post.categories.each do |c|  %> 
                  <%=c.name %>
                <% end %>
            <th>
	      		<th><%= gravatar_image_tag(post.author.email.gsub('spam', 'mdeering'), :alt => post.author.name,:gravatar => {:size =>15})  %><%= post.author.name %><th>
              <th>
                <%= link_to('內容', post_path(post) , :class => "btn btn-small btn-default") %>
                <% if current_user && post.editable_by?(current_user) %>
                  <%= link_to('刪除', post_path(post),:method => :delete ,:confirm=>"你確定要刪除嗎？" , :class => "btn btn-small btn-danger") %>
                <% end %>
              <th>
	      	</tr>
	      <% end %>
	      </table>
      </div>

<% content_for :stylesheets do %>
<% end %>
<% content_for :javascripts do %>
  <%= javascript_include_tag "posts/index" %>
<% end %>