        <%= content_tag_for(:tr, post) do %> 
        <th><%= link_to(post.title, post_path(post)) %></th>
        <th><%= post.description %></th>
        <th><% post.categories.each do |c|  %> 
          <%=c.name %>
          <% end %>
        </th>
        <th><%= gravatar_image_tag(post.author.email.gsub('spam', 'mdeering'), :alt => post.author.name,:gravatar => {:size =>15})  %><%= post.author.name %></th>
        <th>
         <div class="btn-group">
          <%= link_to('連結', post.url , :class => "btn btn-small btn-default") %>
          <% if current_user && post.editable_by?(current_user) %>
          <%= link_to('刪除', post_path(post),:method => :delete,:remote => true, "data-type" => "script" ,:confirm=>"你確定要刪除嗎？" , :class => "btn btn-small btn-danger") %>
          <% end %>
        </div>
      </th>
      <% end %>
